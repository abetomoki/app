<h1>Edit</h1>
<div class="form-box">
<div class="row">
  <div class="col-md-6 col-md-offset-3">
   <%= form_for(@user) do |f| %>

     <%= render 'shared/error_messages', object: f.object %> 
      
     <%= f.label :name %>
     <%= f.text_field :name %>

     <%= f.label :body %>
     <%= f.text_field :body %>

      <%= f.submit "edit profile", class: "btn btn-large btn-success" %>
    <% end %>
  </div>
</div>
</div>